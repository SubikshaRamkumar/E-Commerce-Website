<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Commerce Website</title>
    <script src="https://kit.fontawesome.com/58324da162.js" crossorigin="anonymous"></script>    
    <link rel="stylesheet" href="/style1.css">
</head>
<body>
    
    <%- include("../partials/nav.ejs") %>


    <section id="page-header" class="about-header">
        <h2>#cart</h2>
        <p>ADD your coupon code & save upto 70%</p>
    </section>

    <section id="cart" class="section-p1">
        <table width="100%">
            <thead>
                <tr>
                    <td>Remove</td>
                    <td>Image</td>
                    <td>Product</td>
                    <td>Price</td>
                    <td>Quantity</td>
                    <td>SubTotal</td>
                </tr>
            </thead>
            <tbody>
                <% cart.forEach((cart) => { %>
                <tr>
                    <td>
                        <a href="/cart/delete/<%=encodeURIComponent(cart.name)%>"><i class="fa-solid fa-trash"></i></a>
                    </td>
                    <td><img src="products/f1.jpg"></td>
                    <td><%= cart.name %></td>
                    <td><%= cart.price %></td>
                    <td><input type="number" value="1"></td>
                    <td><%= cart.price %></td>
                </tr>
               
               <% }); %>
            </tbody>
        </table>
    </section>

    <section id="cart-add" class="section-p1">
        <div class="coupon">
            <h3>Apply Coupon</h3>
            <div>
                <input type="text" placeholder="Enter Your Coupon">
                <button class="normal">Submit</button>
            </div>
        </div>
        <div class="subtotal">
            <h3>Cart Table</h3>
            <table>
                <tr>
                    <td>Cart Subtotal</td>
                    <td>200</td>
                </tr>
                <tr>
                    <td>Shopping</td>
                    <td>Free</td>
                </tr>
                <tr>
                    <td><strong>Total</strong></td>
                    <td><strong>200</strong></td>
                </tr>
            </table>
            <button class="normal">Proceed to Checkout</button>
        </div>
    </section>

    <%- include("../partials/footer.ejs") %>


    <script src="script.js"></script>
</body>
</html>